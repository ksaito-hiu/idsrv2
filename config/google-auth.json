{
  "@context": [
    "https://linkedsoftwaredependencies.org/bundles/npm/@solid/community-server/^7.0.0/components/context.jsonld",
    "https://linkedsoftwaredependencies.org/bundles/npm/idsrv2/^1.0.0/components/context.jsonld"
  ],
  "@graph": [
    {
      "comment": "Enable Google OIDC Authentication.",
    },
    {
      "@id": "urn:idsrv2:core:GoogleOIDC",
      "@type": "GoogleOIDC",
      "g_route": { "@id": "urn:solid-server:default:AccountRoute" },
      "c_id": "this parameter will be overrided by idsrv2-config.json.",
      "c_secret": "this parameter will be overrided by idsrv2-config.json."
    },
    {
      "@id": "urn:solid-server:default:PrimaryParallelInitializer",
      "@type": "ParallelHandler",
      "handlers": [
        { "@id" : "urn:idsrv2:core:GoogleOIDC" }
      ]
    },
    { "comment": "Route handler(create-googleのためのルートハンドラ)",
      "@id": "urn:idsrv2:core:AccountGoogleRouter",
      "@type": "AuthorizedRouteHandler",
      "route": {
        "@id": "urn:idsrv2:core:CreateGoogleRoute",
        "@type": "RelativePathInteractionRoute",
        "base": { "@id": "urn:solid-server:default:AccountIdRoute" },
        "relativePath": "login/google/"
      },
      "source": { "@id": "urn:idsrv2:core:CreateGoogleInteractionHandler" }
    },
    { "comment": "Interaction handler(create-googleのためのインタラクションハンドラー)",
      "@id": "urn:idsrv2:core:CreateGoogleInteractionHandler",
      "@type": "ViewInteractionHandler",
      "source": {
        "@id": "urn:idsrv2:core:CreateGoogleHandler",
        "@type": "CreateGoogleHandler",
      }
    },
    { "comment": "Exposing the API(APIの公開)",
      "@id": "urn:solid-server:default:InteractionRouteHandler",
      "@type": "WaterfallHandler",
      "handlers": [
        { "@id": "urn:idsrv2:core:AccountGoogleRouter" }
      ]
    },

    { "comment": "Route handler(login-googleのためのルートハンドラ)",
      "@id": "urn:idsrv2:core:LoginGoogleRouter",
      "@type": "InteractionRouteHandler",
      "route": {
        "@id": "urn:idsrv2:core:LoginGoogleRoute",
        "@type": "RelativePathInteractionRoute",
        "base": { "@id": "urn:solid-server:default:IndexRoute" },
        "relativePath": "login/google/"
      },
      "source": { "@id": "urn:idsrv2:core:LoginGoogleInteractionHandler" }
    },
    { "comment": "Interaction handler(login-googleのためのインタラクションハンドラー)",
      "@id": "urn:idsrv2:core:LoginGoogleInteractionHandler",
      "@type": "ViewInteractionHandler",
      "source": {
        "@id": "urn:idsrv2:core:LoginGoogleHandler",
        "@type": "LoginGoogleHandler",
      }
    },
    { "comment": "Exposing the API(APIの公開)",
      "@id": "urn:solid-server:default:InteractionRouteHandler",
      "@type": "WaterfallHandler",
      "handlers": [
        { "@id": "urn:idsrv2:core:LoginGoogleRouter" }
      ]
    },

    {
      "comment": [ "UIのためのHTMLテンプレートを登録する",
                   "routeの設定でAPIと同じ場所に登録している。"]
    },
    { "comment": "Adding HTML(create-googleのHTMLをコントロールにの追加)",
      "@id": "urn:solid-server:default:HtmlViewHandler",
      "@type": "HtmlViewHandler",
      "templates": [{
        "@id": "urn:idsrv2:core:CreateGoogleHtml",
        "@type": "HtmlViewEntry",
        "filePath": "./templates/identity/google/create-google.html.ejs",
        "route": { "@id": "urn:idsrv2:core:CreateGoogleRoute" }
      }]
    },
    { "comment": "Adding HTML(login-googleのHTMLをコントロールにの追加)",
      "@id": "urn:solid-server:default:HtmlViewHandler",
      "@type": "HtmlViewHandler",
      "templates": [{
        "@id": "urn:idsrv2:core:LoginGoogleHtml",
        "@type": "HtmlViewEntry",
        "filePath": "./templates/identity/google/login-google.html.ejs",
        "route": { "@id": "urn:idsrv2:core:LoginGoogleRoute" }
      }]
    },

    {
      "comment": [ "ここから下は@css:config/identity/handler/enable/password.json",
                   "を真似してコントロールを整備する。"]
    },
    { "comment": "Adding the necessary controls(googleを入れるコントロールを追加する)",
      "@id": "urn:solid-server:default:ControlHandler",
      "@type": "ControlHandler",
      "controls": [
        {
          "ControlHandler:_controls_key": "google",
          "ControlHandler:_controls_value": {
            "comment": "All controls associated with the google login method.",
            "@id": "urn:idsrv2:core:GoogleControlHandler",
            "@type": "ControlHandler",
            "controls": []
          }
        }
      ]
    },
    { "comment": "Adding the necessary controls(googleコントロールの中にcreateを追加する)",
      "@id": "urn:idsrv2:core:GoogleControlHandler",
      "@type": "ControlHandler",
      "controls": [{
        "ControlHandler:_controls_key": "create",
        "ControlHandler:_controls_value": { "@id": "urn:idsrv2:core:CreateGoogleRoute" }
      }]
    },
    { "comment": "Adding the necessary controls(googleコントロールの中にloginを追加する)",
      "@id": "urn:idsrv2:core:GoogleControlHandler",
      "@type": "ControlHandler",
      "controls": [{
        "ControlHandler:_controls_key": "login",
        "ControlHandler:_controls_value": { "@id": "urn:idsrv2:core:LoginGoogleRoute" }
      }]
    },
    { "comment": "コントロールのloginの所に登録することでlogin画面の最初に選択肢が表示されるようになる。",
      "@id": "urn:solid-server:default:LoginHandler",
      "@type": "ControlHandler",
      "controls": [
        {
          "ControlHandler:_controls_key": "GoogleOIDC authentication",
          "ControlHandler:_controls_value": { "@id": "urn:idsrv2:core:LoginGoogleRoute" }
        }
      ]
    },
    {
      "comment": [
        "HTMLのテンプレートのアドレスもコントロールに登録する。",
        "まずは、コントロールのhtmlの中にgoogleを作る。"
      ]
    },
    {
      "@id": "urn:solid-server:default:HtmlControlHandler",
      "@type": "ControlHandler",
      "controls": [
        {
          "ControlHandler:_controls_key": "google",
          "ControlHandler:_controls_value": {
            "comment": "All controls associated with the password login method.",
            "@id": "urn:idsrv2:core:HtmlGoogleControlHandler",
            "@type": "ControlHandler",
            "controls": []
          }
        }
      ]
    },
    { "comment": "Adding HTML(create-googleのHTMLをコントロールのHTMLの所に追加)",
      "@id": "urn:idsrv2:core:HtmlGoogleControlHandler",
      "@type": "ControlHandler",
      "controls": [{
        "ControlHandler:_controls_key": "create",
        "ControlHandler:_controls_value": { "@id": "urn:idsrv2:core:CreateGoogleRoute" }
      }]
    },
    { "comment": "Adding HTML(login-googleのHTMLをコントロールのHTMLの所に追加)",
      "@id": "urn:idsrv2:core:HtmlGoogleControlHandler",
      "@type": "ControlHandler",
      "controls": [{
        "ControlHandler:_controls_key": "login",
        "ControlHandler:_controls_value": { "@id": "urn:idsrv2:core:LoginGoogleRoute" }
      }]
    }
  ]
}
